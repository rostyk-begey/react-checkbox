{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.test.json"
    }
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/dist/"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/index.ts",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ]
}
